{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "outDir": "dist",
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}